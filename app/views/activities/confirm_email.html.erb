<h1>メール送信画面</h1>

<p id="notice"><%= notice %></p>

<%= link_to 'ご家族にメール送信する', edit_activity_path(@activity) %><br>
<%= link_to '内容を修正する', edit_activity_path(@activity.id,) %><br>
<%= link_to '終了してTOPに戻る', root_path %>


<h3><%= "#{@ward.name}さんの履歴" %></h3>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Memo</th>
      <th>Comment</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @activity.contents.first.body %></td>
        <td><%= @activity.memo %></td>
        <td><%= @activity.comment %></td>
        <td><%= image_tag(@activity.photo) %></td>
      </tr>
  </tbody>
</table>

<br>

