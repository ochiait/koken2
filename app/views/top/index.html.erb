<%= form_with url: new_activity_path, method: :get, local: true do |form| %>
   <%= submit_tag "記録する" %>
   <%= link_to "履歴を見る", activities_path(ward_id: ward.id) %>
   <table>
     <thead>
       <tr>
         <th>被後見人一覧</th>
       </tr>
     </thead>

     <tbody>
       <div class="field">
         <% @wards.each do |ward| %>
           <tr>
             <td>
             <%= form.check_box :ward %>
             <%= form.label_tag :ward, ward.name %>
           </td>
         </tr>
       <% end %>
       </div>
     </tbody>
   </table>
<% end %>